sudo ufw allow 8080
sudo sed -i 's/DEFAULT_FORWARD_POLICY="DROP"/DEFAULT_FORWARD_POLICY="ACCEPT"/' /etc/default/ufw
sudo sed -i 's/#net/ipv4/ip_forward=1/net/ipv4/ip_forward=1/' /etc/ufw/sysctl.conf
sudo sed -i '10i*nat\n:PREROUTING ACCEPT [0:0]\n-A PREROUTING -p tcp --dport 8080 ij REDIRECT --to-port 80\nCOMMIT' /etc/ufw/before.rules
sudo ufw reload
sudo ufw enable
